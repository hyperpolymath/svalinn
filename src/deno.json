{
  "name": "@svalinn/gateway",
  "version": "0.1.0",
  "license": "PMPL-1.0-or-later",
  "exports": {
    ".": "./main.ts",
    "./compose": "./compose/cli.ts"
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-env --watch main.ts",
    "start": "deno run --allow-net --allow-read --allow-env main.ts",
    "build": "deno compile --allow-net --allow-read --allow-env -o dist/svalinn main.ts",
    "build:compose": "deno compile --allow-net --allow-read --allow-env -o dist/svalinn-compose compose/cli.ts",
    "compose": "deno run --allow-net --allow-read --allow-env compose/cli.ts",
    "test": "deno test --allow-net --allow-read --allow-env",
    "check": "deno check main.ts compose/cli.ts",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "imports": {
    "@hono/hono": "jsr:@hono/hono@^4",
    "@std/path": "jsr:@std/path@^1",
    "@std/fs": "jsr:@std/fs@^1",
    "@std/json": "jsr:@std/json@^1",
    "@std/yaml": "jsr:@std/yaml@^1",
    "@std/cli": "jsr:@std/cli@^1",
    "ajv": "npm:ajv@^8",
    "ajv-formats": "npm:ajv-formats@^3"
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
