{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://svalinn.dev/schemas/gatekeeper-policy.v1.json",
  "title": "Gatekeeper Policy",
  "description": "Minimal policy for attestation gating in Svalinn/Vordr",
  "type": "object",
  "required": ["version", "requiredPredicates", "allowedSigners", "logQuorum"],
  "properties": {
    "version": {
      "type": "integer",
      "enum": [1],
      "description": "Policy schema version"
    },
    "requiredPredicates": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "format": "uri"
      },
      "description": "Predicate types that must be present in the bundle"
    },
    "allowedSigners": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^sha256:[a-f0-9]{64}$"
      },
      "description": "Key IDs allowed to sign attestations"
    },
    "logQuorum": {
      "type": "integer",
      "minimum": 1,
      "description": "Minimum distinct log operators required"
    },
    "mode": {
      "type": "string",
      "enum": ["strict", "permissive"],
      "description": "Strict rejects failures; permissive warns and continues"
    },
    "notes": {
      "type": "string",
      "description": "Human-readable policy notes"
    }
  },
  "examples": [
    {
      "version": 1,
      "requiredPredicates": [
        "https://slsa.dev/provenance/v1",
        "https://spdx.dev/Document"
      ],
      "allowedSigners": [
        "sha256:0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef"
      ],
      "logQuorum": 1,
      "mode": "strict",
      "notes": "MVP policy: single signer and single transparency log."
    }
  ]
}
